<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zechocapic.myandroidgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/red_car_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zechocapic.myandroidgame.MainGame"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zechocapic.myandroidgame.Play"
            android:label="@string/title_activity_play"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.zechocapic.myandroidgame.Options"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name=".Rules"
            android:label="@string/title_activity_rules" >
        </activity>
        <activity
            android:name="com.zechocapic.myandroidgame.Credits"
            android:label="@string/title_activity_credits" >
        </activity>
    </application>

</manifest>
